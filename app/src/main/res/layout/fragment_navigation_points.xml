<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <hr.perisic.luka.robotcontroller.app.ui.widget.points.NavigationPointsView
        android:id="@+id/navigationPointsView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <hr.perisic.luka.robotcontroller.app.ui.widget.action.ActionsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:positiveActionIcon="@drawable/ic_navigate"
        app:positiveActionText="@string/navigate" />

</androidx.constraintlayout.widget.ConstraintLayout>